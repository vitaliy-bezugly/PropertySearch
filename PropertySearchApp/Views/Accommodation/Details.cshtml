@model AccommodationViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="image-wrapper">
                <img src="@Model.PhotoUri?.ToString()" class="img-rounded" alt="Photo">
            </div>
            <a asp-controller="Accommodation" asp-action="Index" class="btn btn-secondary mt-2" style="min-width:150px">Go back</a>
        </div>
        <div class="col-md-8">
            <h3>@Model.Title</h3>
            <p class="text-gray">@Model.Description</p>
            <h6>
                <i class='bx bx-purchase-tag'></i>
                Price:
                @Model.Price$
            </h6>
            <div>
                <i class='bx bx-user-pin'></i>
                Owner username:
                <a asp-controller="Identity" asp-action="Details" asp-route-id="@Model.OwnerId" class="link-primary" target="_blank">
                    <span>@Model.OwnerUsername</span>
                </a>
            </div>
        </div>
    </div>
</div>
